<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Banner -->
        <template id="banner_snippet_id" inherit_id="website.snippets" name="Intello Banner">
            <xpath expr="//div[@id='snippet_structure']/div[@class='o_panel_body']" position="inside">
                <t t-snippet="theme_intello.snippet_banner_intello"
                   t-thumbail=""/>
            </xpath>
        </template>
        <template id="snippet_banner_intello" name="Intello Banner">
            <section id="snippet_banner_id" class="banner banner_home">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-7 offset-md-1 banner-app-padding">
                            <div class="banner-title-text">
                                <h1>
                                    <span class="banner-title-top">Titulo 1</span>
                                    <span class="banner-title-middle">Titulo 2</span>
                                </h1>
                            </div>
                            <div style="banner-title-line">
                                <hr class="bottom-line"/>
                            </div>
                            <div class="banner-subtitle-text">
                                <h4 class="banner-subtitle">
                                    Subtitulo normal
                                    <span class="banner-subtitle-bold">Subtitulo Bold </span>
                                </h4>
                            </div>
                        </div>
                        <div class="col-md-4"/>
                    </div>
                </div>
            </section>

        </template>

